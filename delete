Private Sub Command2_Click()
 Call openConnection

    Dim bookID As String
    bookID = Trim(Text1.Text)

    If bookID = "" Then
        MsgBox "Please enter the BookID to delete.", vbExclamation
        Exit Sub
    End If

    Dim confirm As VbMsgBoxResult
    confirm = MsgBox("Are you sure you want to delete the book with ID '" & bookID & "'?", vbYesNo + vbQuestion, "Confirm Delete")

    If confirm = vbYes Then
        Dim rs As ADODB.Recordset
        Set rs = New ADODB.Recordset
        rs.Open "SELECT * FROM Books WHERE BookID = '" & bookID & "'", conn, adOpenStatic, adLockReadOnly

        If rs.EOF Then
            MsgBox "BookID not found.", vbCritical
        Else
            conn.Execute "DELETE FROM Books WHERE BookID = '" & bookID & "'"
            MsgBox "Book deleted successfully.", vbInformation

            ' Clear BookID field
            Text1.Text = ""
        End If

        rs.Close
        Set rs = Nothing
    End If
End Sub

Private Sub Command5_Click()
Unload Me
Loginfrm.Show
End Sub

